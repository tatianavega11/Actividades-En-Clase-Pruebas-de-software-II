package torre;
 
public class Torre {
 
    

public static int calcularVasos (int niveles) {

if (niveles <= 0) {

return 0;

}

return niveles + calcularVasos (niveles - 1);

}

}

 


package torre;

public class main {

     public static void main(String[] args) {

         Torre.calcularVasos(99);

         System.out.println("El Resultadfo es:" + Torre.calcularVasos(99));

     }

}
 
